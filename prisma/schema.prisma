model Poll {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  pullOptions PollOption[]

  @@map("polls")
}

model PollOption {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  pollId String
  Poll   Poll   @relation(fields: [pollId], references: [id])

  @@map("poll_options")
}
